{
  "name": "clarify-backend",
  "version": "1.0.0",
  "description": "A website for clarifying the doubts",
  "main": "index.js",
  "scripts": {
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
